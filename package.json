{
  "name": "SoulsBuild",
  "version": "1.0.0",
  "description": "SASS Build scripts for SoulsBuild",
  "scripts": {
    "sass:build": "sass --no-source-map scss/souls_build:static/souls_build/css && sass --no-source-map weapons/scss/weapons:weapons/static/weapons/css && sass --no-source-map games/scss/games:games/static/games/css",
    "sass:watch": "sass --no-source-map --watch scss/souls_build:static/souls_build/css && sass --no-source-map --watch weapons/scss/weapons:weapons/static/weapons/css && sass --no-source-map --watch games/scss/games:games/static/games/css"
  },
  "author": "MikeDevs",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.4.0",
    "bootstrap": "^5.3.0",
    "sass": "^1.62.0"
  }
}
